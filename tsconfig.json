{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es5"
        ],
        "outDir": "./",
        "rootDir": "src",
        "declaration": true,
        "strict": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}